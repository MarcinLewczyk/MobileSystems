<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CycleCount">

    <SurfaceView
        android:id="@+id/cameraPreview"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="480px" />

    <TextView
        android:id="@+id/itemId"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/itemQty"
        android:layout_below="@id/itemId"
        android:layout_marginTop="10dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/itemQtyTotal"
        android:layout_below="@+id/itemQty"
        android:layout_above="@id/cameraPreview"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/readCodeButton"
        android:layout_below="@id/cameraPreview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/capture_code"
        android:textSize="20dp"/>

    <Button
        android:id="@+id/commitButton"
        android:layout_below="@id/readCodeButton"
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/commit_transaction"
        android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/commitButton"
        android:gravity="center_horizontal"
        android:textSize="15dp"
        android:text="@string/camera_focus_text"/>

</RelativeLayout>